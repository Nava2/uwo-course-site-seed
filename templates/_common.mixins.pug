mixin icn(name, hidden)
  i.fa(class="fa-" + name aria-hidden=!!hidden)&attributes(attributes)

mixin owlLink(href)
  a(href=join(data.owlHref, 'page', href) target="_blank")
    +icn('graduation-cap', true)
    = ' '
    block

mixin ghLink(href)
  a(href=href)
    +icn('github', true)
    = ' '
    block

mixin javaLink(url)
  //- Shows a link with a "coffee cup" implying Java -- hehe.
  a(href=url target="_blank")
    +icn("coffee", true)
    | &nbsp;
    block

mixin author(author)
  span.author-line
    =author.name
    if author.email
      | &nbsp;
      a(href="mailto:" + author.email): +icn('envelope')
    if author.url
      | &nbsp;
      a(href=url.format(author.url) target="_blank"): +icn('link')

mixin video(name)
  video&attributes(attributes)
    source(src=assets.video(name + '.ogg') type="video/ogg")
    source(src=assets.video(name + '.mp4') type="video/mp4")
